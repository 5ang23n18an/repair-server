<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wqtang.system.SystemTaskMapper">

    <select id="listByParams" resultType="com.wqtang.object.po.system.SystemTask">
        select *
        from system_task
        <where>
            <if test="taskName != null and taskName != ''">and task_name like concat('%', #{taskName}, '%')</if>
            <if test="taskGroup != null and taskGroup != ''">and task_group = #{taskGroup}</if>
            <if test="status != null and status != ''">and status = #{status}</if>
            <if test="invokeTarget != null and invokeTarget != ''">and invoke_target like concat('%', #{invokeTarget}, '%')</if>
        </where>
    </select>

    <select id="getByTaskId" resultType="com.wqtang.object.po.system.SystemTask">
        select *
        from system_task
        where task_id = #{taskId}
    </select>

    <delete id="batchDeleteByTaskIds">
        delete from system_task
        where task_id in
        <foreach item="taskId" collection="array" open="(" close=")" separator=",">
            #{taskId}
        </foreach>
    </delete>

    <insert id="insert">
        insert into system_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="taskId != null and taskId != 0">task_id,</if>
            <if test="taskName != null and taskName != ''">task_name,</if>
            <if test="taskGroup != null and taskGroup != ''">task_group,</if>
            <if test="invokeTarget != null and invokeTarget != ''">invoke_target,</if>
            <if test="cronExpression != null and cronExpression != ''">cron_expression,</if>
            <if test="misfirePolicy != null and misfirePolicy != ''">misfire_policy,</if>
            <if test="concurrent != null and concurrent != ''">concurrent,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="remark != null and remark != ''">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="taskId != null and taskId != 0">#{taskId},</if>
            <if test="taskName != null and taskName != ''">#{taskName},</if>
            <if test="taskGroup != null and taskGroup != ''">#{taskGroup},</if>
            <if test="invokeTarget != null and invokeTarget != ''">#{invokeTarget},</if>
            <if test="cronExpression != null and cronExpression != ''">#{cronExpression},</if>
            <if test="misfirePolicy != null and misfirePolicy != ''">#{misfirePolicy},</if>
            <if test="concurrent != null and concurrent != ''">#{concurrent},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
        </trim>
    </insert>

    <update id="update">
        update system_task
        <set>
            <if test="taskName != null and taskName != ''">task_name = #{taskName},</if>
            <if test="taskGroup != null and taskGroup != ''">task_group = #{taskGroup},</if>
            <if test="invokeTarget != null and invokeTarget != ''">invoke_target = #{invokeTarget},</if>
            <if test="cronExpression != null and cronExpression != ''">cron_expression = #{cronExpression},</if>
            <if test="misfirePolicy != null and misfirePolicy != ''">misfire_policy = #{misfirePolicy},</if>
            <if test="concurrent != null and concurrent != ''">concurrent = #{concurrent},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
        </set>
        where task_id = #{taskId}
    </update>

</mapper>